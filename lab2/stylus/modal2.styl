html,
body
  margin 0
  padding 0
  width 100%
  height 100%
  font-family Arial, sans-serif
  background-color #f2f2f2

table
  width 100%
  border-collapse collapse

td
  padding 15px
  text-align center

th
  background-color gray
  color white
  font-weight normal

.logo-cell
  text-align center

h3, h4
  margin 10px 0

button
  background-color black
  color white
  border none
  padding 10px 20px
  cursor pointer
  font-size 14px
  border-radius 5px

.logo_img
  max-width 180px
  height auto
  margin-right auto
  display block

.card
  background-color #fff
  border 1px solid #ddd
  border-radius 8px
  box-shadow 0 4px 6px rgba(0, 0, 0, 0.1)
  transition transform 0.3s ease
  max-width 200px
  margin 15px auto

.card:hover
  transform scale(1.05)

.card-img
  margin 0 auto
  max-width 100%
  height auto

.card-title
  font-size 18px
  font-weight bold
  text-align left

.card-price
  font-size 14px
  color gray
  text-align left

.buy-button:hover
  background-color #5d4c7e

.cart-img
  height 43px
  width auto

.cart-img:hover
  transform scale(1.15)

.cart-button
  background-color transparent

.logo_btn
  background-color transparent

.category-cell
  background-color #ddd
  vertical-align top

.category-list
  list-style-type none
  padding 0

.category-item:hover
  cursor pointer
  background-color #b1a4cc
  transform scale(1.08)
  border-radius 5px

.category-item
  margin-bottom 10px

.search-container
  position relative

.search-icon
  position absolute
  right 10px
  top 50%
  transform translateY(-50%)
  color #999
  height 20px

.search-input
  width 100%
  padding 12px 40px 12px 12px
  font-size 16px
  border 1px solid #ddd
  border-radius 5px
  box-sizing border-box
  outline none

.search-input::placeholder
  color #999

.search-input:focus
  border-color #5d4c7e
  border-width 4px
  box-shadow 0 0 8px rgba(76, 175, 80, 0.3)

@media (min-width: 3000px)
  h4
    font-size 4.4em

  li
    font-size 62px

  .logo_img
    max-width 300px

  .card-title
    font-size 3.4em

  .card-price
    font-size 2.2em

  .cart-img
    width 80px
    height 80px

  button
    font-size 2.2em

@media (max-width: 768px)
  td.card
    display inline-block
    width 45%

  table
    display flex
    flex-wrap wrap
    justify-content center

  tbody
    display contents

  td.category-cell
    display block
    width 100%
    text-align center
    background-color #ddd
    padding 10px 0

@media (max-width: 480px)
  td.card
    width 100%

  td.category-cell
    text-align left
    padding 10px
